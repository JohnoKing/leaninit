# Source rc.svc
. /etc/leaninit.d/rc.svc

# Set the $GETTY variable
GETTY=$(grep getty /etc/leaninit.d/ttys | grep -v '#')

# Check all the file systems in /etc/fstab for damage, and repair them if needed
print "Checking all file systems for data corruption..." nolog ${LIGHT_PURPLE} ${WHITE}
DEFLINUX
fsck -A
ENDEF

DEFBSD
fsck -F
ENDEF

# Mount all drives
print "Mounting all drives..." nolog ${LIGHT_PURPLE} ${WHITE}
mount -a
mount -o remount,rw / 2> /dev/null || true

DEFLINUX
# Mount securityfs
print "Mounting securityfs..." nolog ${LIGHT_PURPLE} ${WHITE}
mount -t securityfs securityfs /sys/kernel/security

# Support cgroups
print "Mounting /sys/fs/cgroup..." nolog ${LIGHT_PURPLE} ${WHITE}
mount -t tmpfs cgroup /sys/fs/cgroup

# Load all modules specified in /etc/modules-load.d and by `kmod static-nodes`
if [ -r /etc/modules-load.d/* ]; then
	print "Loading kernel modules..." log ${BLUE} ${WHITE}
	for m in "$(cat /etc/modules-load.d/* | grep -v '#')"; do
		modprobe $m
	done
	modprobe -a "$(kmod static-nodes | awk '/Module:/ {print $2}')"
fi
ENDEF

# Mount all ZFS file systems
if [ "$ZFS_ENABLE" = "true" ]; then

	# Done for compatibility with beadm(1)
	for z in "$(df -t zfs | tail -n +2 | awk '{print $1}')"; do
		zfs mount $z
	done

	# mount -a equivalent
	zfs mount -a

	# ZFS NFS
	zfs share -a

	# Turn on writes
	for z in $(zpool list -Ho name); do
		print "Turning readonly off for dataset $z" nolog ${LIGHT_PURPLE} ${WHITE}
		zfs readonly=off $z
	done
fi

# Swap
print "Turning on all swap partitions..." nolog ${LIGHT_PURPLE} ${WHITE}
swapon -a

# Logging
touch $LOGFILE $LOGFILE.2 $LOGFILE.3
mv $LOGFILE $LOGFILE.old
mv $LOGFILE.2 $LOGFILE.old.2
mv $LOGFILE.3 $LOGFILE.old.3
echo "LeanInit is running on $(uname -srm)" > $LOGFILE

# sysctl(8)
print "Launching sysctl(8)..." log ${BLUE} ${WHITE}
DEFLINUX
sysctl --system
sysctl fs.protected_hardlinks=1 # This should always be set to 1
sysctl fs.protected_symlinks=1
ENDEF

DEFBSD
for s in /etc/sysctl.conf /etc/sysctl.conf.local; do
	if [ -r $s ]; then
		sysctl -f /etc/sysctl.conf
	fi
done
ENDEF

# Remove the nologin and .status files
print "Removing any existing nologin files..." nolog ${LIGHT_PURPLE} ${WHITE}
rm -f /run/nologin /var/run/nologin
print "Resetting /var/run/leaninit" nolog ${LIGHT_PURPLE} ${WHITE}
rm -rf /var/run/leaninit
mkdir -p /var/run/leaninit

DEFLINUX
# Launch eudev (required for the X server to function)
print "Starting udev..." log ${BLUE} ${WHITE}
udevd --daemon
udevadm trigger --type=devices
udevadm trigger --type=subsystems
udevadm settle
ENDEF

DEFBSD
# Launch devd (vidcontrol -m is required for moused to function)
print "Starting devd..." log ${BLUE} ${WHITE}
vidcontrol -m on
fork "devd"
ENDEF

DEFLINUX
# Set up network interfaces
print "Setting up a loopback interface..." log ${BLUE} ${WHITE}
ip link set up lo
if [ "$INTERFACE" != "" ]; then
	for n in "$INTERFACE"; do
		print "Setting up $n for networking..." log ${BLUE} ${WHITE}
		ip link set up $n
	done
fi
ENDEF

# Set the hostname
if [ "$HOSTNAME" != "" ]; then
	print "Setting the hostname to $HOSTNAME..." nolog ${LIGHT_PURPLE} ${WHITE}
	fork "hostname $HOSTNAME"
fi

# Set the timezone
if [ "$TIMEZONE" != "" ] && [ -r /usr/share/zoneinfo/$TIMEZONE ]; then
	print "Setting the timezone to $TIMEZONE..." nolog ${LIGHT_PURPLE} ${WHITE}
	ln -sf /usr/share/zoneinfo/$TIMEZONE /etc/localtime
fi

DEFLINUX
# Set the keyboard layout (this requires kbd to work)
if [ "$KEYMAP" != "" ]; then
	print "Setting the keyboard layout to $KEYMAP..." log ${BLUE} ${WHITE}
	fork "loadkeys $KEYMAP"
fi
ENDEF

# If there are no services enabled, go to finish()
if [ "$(ls /etc/leaninit.d/svc.e)" = "" ]; then
	finish
fi

# Start the services
for sv in $(ls /etc/leaninit.d/svc.e); do
	fork "INIT=true /etc/leaninit.d/svc.d/$sv start"
done

# Open gettys on the ttys specified in /etc/leaninit.d/ttys
print "Launching gettys on all ttys specified in /etc/leaninit.d/ttys..." log ${BLUE} ${WHITE}
for tty in $(grep -Ev '#|getty' /etc/leaninit.d/ttys); do
	fork "while true; do $GETTY $GETTYMODE $tty; done"
done

# Return to init
exit 0
