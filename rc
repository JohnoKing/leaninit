# Load /etc/profile
. /etc/profile

# Function which forks processes (for parallel booting)
fork() {
	setsid "$@" &
}

# Echo to the console if verbose boot is on
if [ "$1" = "v" ]; then
	export OUT="/dev/stdout"
	print() {
		echo "$@"
		echo "$@" >> /var/log/leaninit.log
	}
	echo "LeanInit running on `uname -srm`"

# Don't echo to the console if quiet boot is on
else
	export OUT="/dev/null"
	print() {
		echo "$@" >> /var/log/leaninit.log
	}
fi

# Check all the filesystems in /etc/fstab for damage, and repair them if needed
fsck -A > $OUT

# Launch eudev
fork udevd

# Set the $GETTY variable
export GETTY=`grep getty /etc/ttys | sed /#/d`

# Load all modules specified in the /etc/modules-load.d folder (currently broken)
for i in `cat /etc/modules-load.d/* | sed /#/d`; do
	modprobe $i
done

# Load all sysctl settings
fork sysctl -a > $OUT

# Set the hostname
if [ -e /etc/hostname ] && [ "`cat /etc/hostname`" != "" ]; then
	print "Setting the hostname to `cat /etc/hostname`..."
	fork hostname `cat /etc/hostname`
fi

# Set the keyboard layout when needed (this requires kbd to work)
if [ -e /etc/leaninit/kbd.conf ] && [ "`cat /etc/leaninit/kbd.conf`" != "" ]; then
	print "Setting the keyboard layout to `cat /etc/leaninit/kbd.conf`..."
	fork loadkeys `cat /etc/leaninit/kbd.conf`
fi

# Start the services
for i in `ls /etc/leaninit/svce`; do
	. /etc/leaninit/svc/$i
	print "Starting $NAME..."
	main > $OUT
	echo "Started $NAME" >> /var/log/v7init.log
done

# Open some gettys, reserving tty7 for the X server and Wayland
print "Launching gettys..."
for i in `cat /etc/ttys | sed /#/d | sed /getty/d`; do
	fork $GETTY 38400 $i
done

# Launch a getty on tty1 without forking
$GETTY 38400 tty1
