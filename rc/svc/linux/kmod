#!/bin/sh
NAME="Kernel Modules"
MSG="Loading kernel modules"

main()
{
	if [ -n "$(ls /etc/modules-load.d 2> /dev/null)" ]; then
		modprobe -a $(kmod static-nodes | awk '/Module:/ {print $2}') $(cat /etc/modules-load.d/* | grep -v '#')
	else
		modprobe -a $(kmod static-nodes | awk '/Module:/ {print $2}')
	fi
}

. /etc/leaninit/rc.svc
