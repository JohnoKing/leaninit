#!/bin/sh
#DEF FreeBSD
. /etc/leaninit/rc.conf.d/ntpd.conf
#ENDEF
#DEF NetBSD
. /etc/leaninit/rc.conf.d/ntpd.conf
#ENDEF
NAME="ntpd"

main() {
    waitfor networking
#DEF FreeBSD
    [ "$NTPDATE" = "true" ] && ntpdate $(grep 'server' /etc/ntp.conf | grep -v '#' | awk '{ print $2 }')
#ENDEF
#DEF NetBSD
    [ "$NTPDATE" = "true" ] && ntpdate $(grep 'server' /etc/ntp.conf | grep -v '#' | awk '{ print $2 }')
#ENDEF
    ntpd -p "$__svcpidfile"
}

. /etc/leaninit/rc.svc
