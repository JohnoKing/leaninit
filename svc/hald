# HALD (this service file is intended for FreeBSD with devd)
NAME="HALD"
DAEMON=hald

# The main function
main() {
	# HALD requires D-BUS
	waitforinit dbus dbus-daemon $1

	# HALD is stubborn, workaround CPU bug
	sleep 1
	hald --daemon=yes --verbose=yes --use-syslog
	sleep 2
	kill -s SIGKILL `psawk $DAEMON`
}
