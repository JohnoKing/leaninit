XDMCFG=/etc/leaninit/xdm.cfg
DAEMON=Xorg

# Source the XDM config if it exists, return an error if it doesn't
if [ -r $XDMCFG ]; then
	. $XDMCFG
else
	print "The X Server cannot be started because $XDMCFG doesn't exist!"
	exit 1
fi

# The main function
main() {
	waitforinit dbus dbus-daemon command $1
	fork $DM
}
