XDMCONF=/etc/leaninit/xdm.conf

# The main function
main() {
	# Source the /etc/leaninit/xdm.conf file if it exists, error if it doesn't
	if [ -r $XDMCONF ]; then
		. $XDMCONF
		export DM
		NAME=$DM

		# Start the display manager
		$DM
	else
		print "The X Server cannot be started because $XDMCONF doesn't exist!"
	fi
}
